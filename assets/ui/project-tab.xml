<?xml version="1.0" encoding="utf-8" ?>
<vbox width="100%" height="100%">
    <style>
        #projectReleases .scrollview-contents {
            spacing: 0;
            padding: 0;
        }
    </style>
    <hbox width="100%" height="100%">
        <vbox width="100%" height="100%">
            <label text="Haxelib Releases" />
            <scrollview id="projectReleases" width="100%" height="100%" contentWidth="100%" />
            <hbox width="100%">
                <button id="refreshReleases" text="Refresh" icon="icons/shadowless-arrow-circle-135-left.png" iconPosition="left" />
                <button id="createNewRelease" text="Create New Release" icon="icons/globe--plus.png" iconPosition="right" />
                <spacer width="100%" />
                <button id="projectSettings" text="Settings" icon="icons/gear.png" />
            </hbox>
        </vbox>
        <vbox width="200" height="100%">
            <label text="Git Status" />
            <git-status width="100%" height="100%" id="gitStatus" />
            <hbox width="100%">
                <button text="Refresh" id="refreshGitStatus" width="50%" icon="icons/shadowless-arrow-circle-135-left.png" iconPosition="left" />
                <button text="Commit" width="50%" icon="icons/node-select-previous.png" iconPosition="right" />
            </hbox>
        </vbox>    
    </hbox>
</vbox>